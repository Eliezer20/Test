pipeline {
        agent any
        environment {
                PATH = "/usr/bin:$PATH"
                }
        stages {
                stage ('clone') {
                        steps {
                                git branch: 'main', url: 'https://github.com/spring-projects/spring-petclinic.git'
                        }
                }

                stage ('build app') {
                        steps {
                                sh 'mvn clean install'
                        }
                }

                stage ('testing the app') {
                        steps {
                               sh 'mvn test'
                        }


        }

}
